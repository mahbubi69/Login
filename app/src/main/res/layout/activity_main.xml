    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_pasword1"
        android:layout_marginStart="170dp"
        android:layout_marginTop="15dp"
        android:text="LogIn" />

</RelativeLayout>